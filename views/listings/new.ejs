<% layout("/layouts/boilerplate.ejs") %>

<div class="row">
  <div class="col-8 offset-2">
    <br /><br />
    <h3>Create a New Listing</h3>
    <form
      action="/listings"
      novalidate
      method="post"
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-lable">Title</label>
        <input
          name="listing[title]"
          class="form-control"
          placeholder="Add a catchy title"
          required
        />
        <div class="invalid-feedback">Enter valid title</div>
        <div class="valid-feedback">Title looks good</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-lable">Description</label>
        <textarea
          type="text"
          name="listing[description]"
          class="form-control"
          placeholder="1200"
          required
        ></textarea>
        <div class="invalid-feedback">Please enter a short description</div>
      </div>

      <!-- Image filename and URL fields -->
      <div class="mb-3">
        <label for="image" class="form-lable">Upload Listing Image</label>
        <input
          type="file"
          name="listing[image][url]"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Enter valid image filename</div>
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-lable">Price</label>
          <input
            name="listing[price]"
            class="form-control"
            placeholder="1200"
            required
          />
          <div class="invalid-feedback">Price should be valid</div>
        </div>
        <div class="mb-3 col-md-8">
          <label for="country" class="form-lable">Country</label>
          <input
            type="text"
            name="listing[country]"
            class="form-control"
            placeholder="India"
            required
          />
          <div class="invalid-feedback">Country name should be valid</div>
        </div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-lable">Location</label>
        <input
          type="text"
          name="listing[location]"
          class="form-control"
          placeholder="Maharashtra"
          required
        />
        <div class="invalid-feedback">Location should be valid</div>
      </div>
      <br /><br />
      <button class="btn btn-dark add-btn">Add</button>
      <br /><br />
    </form>
  </div>
</div>
