<% layout("/layouts/boilerplate.ejs") %>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Edit your Listing</h3>
    <form
      method="POST"
      action="/listings/<%= listing._id %>?_method=put"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-lable">Title</label>
        <input
          type="text"
          name="listing[title]"
          value="<%= listing.title %>"
          class="form-control"
          required
        />
      </div>
      <div class="mb-3">
        <label for="description" class="form-lable">Description</label>
        <textarea
          type="text"
          name="listing[description]"
          class="form-control"
          required
        >
      <%= listing.description %></textarea
        >
      </div>
      <!-- Image filename and URL fields -->

      <div class="mb-3">
        Original Listing Image
        <br />
        <img src="<%= originalImageUrl %>" style = "height: 250px" width="300px"/>
      </div>

      <div class="mb-3">
        <label for="image" class="form-lable">Upload new Image </label>
        <input type="file" name="listing[image][url]" class="form-control" />
      </div>

      <div class="mb-3 col-md-4">
        <label for="price" class="form-lable">Price</label>
        <input
          type="number"
          name="listing[price]"
          value="<%= listing.price %>"
          class="form-control"
          required
        />
      </div>
      <div class="mb-3 col-md-8">
        <label for="country" class="form-lable">Country</label>
        <input
          type="text"
          name="listing[country]"
          value="<%= listing.country %>"
          class="form-control"
          required
        />
      </div>
      <div class="mb-3">
        <label for="location" class="form-lable">Location</label>
        <input
          type="text"
          name="listing[location]"
          value="<%= listing.location %>"
          class="form-control"
          required
        />
      </div>
      <button class="btn btn-dark edit-btn mt-3">Edit</button>
    </form>
  </div>
</div>
